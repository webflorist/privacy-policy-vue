{
	"env": {
		"browser": true,
		"es2021": true,
		"node": true,
		"amd": true
	},

	"extends": ["eslint:recommended", "plugin:vue/vue3-essential", "prettier"],
	"parser": "vue-eslint-parser",
	"plugins": ["vue", "prettier"],
	"overrides": [
		{
			"files": ["dist/**/*.js"],
			"rules": {
				"no-unused-vars": "off",
				"no-undef": "off"
			}
		}
	]
}
