{
	"env": {
		"browser": true,
		"es2021": true,
		"node": true,
		"amd": true
	},

	"extends": [
		"eslint:recommended",
		"plugin:vue/vue3-essential",
		"plugin:@typescript-eslint/recommended",
		"prettier"
	],
	"parser": "vue-eslint-parser",
	"parserOptions": {
		"ecmaVersion": 12,
		"parser": "@typescript-eslint/parser",
		"sourceType": "module"
	},
	"plugins": ["vue", "@typescript-eslint", "prettier"],
	"rules": {
		"no-console": "warn"
	}
}
